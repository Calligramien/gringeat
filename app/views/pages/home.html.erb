<h6>
	Produits les plus recherchés
</h6>
<div class="container-fluid">
	<div class="row flex-xl-nowrap">
		<div class="col-12">
			<div class="bd-example">
				<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<div class="block4-wrap">
								<% @most_viewed_products.each do |p| %>
								<div class="block4">
									<%= link_to product_detail_path(p.code) do %>
									<div class="card-review">
										<%= image_tag 'icons/steack_icon', class: 'img-produit'%>
										<%= image_tag 'icons/heart_icon', style: 'width:16px', class: 'heart'%>
										<div class="card-review-infos">
											<div class="card-review-name-labels">
												<h4><%= p.product_name[0,30] %></h4>
												<div class="label">
													<%= image_tag 'icons/glutenfree_icon', style: 'width:16px', class: 'label'%>
													<%= image_tag 'icons/leaf_icon', style: 'width:16px'%>
												</div>
											</div>
											<p>
												<%= p.brands %>
											</p>
											<div class="card-review-ratings">
												<% if @products_datas[p.code] %>
												<% @products_datas[p.code][:average_rating].times do %>
												<i class="fas fa-star fa-xs"></i>
												<% end %>
												<% ( 5 - @products_datas[p.code][:average_rating]).times do %>
												<i class="far fa-star fa-xs"></i>
												<% end %>
												</br>
												<span><%= @products_datas[p.code][:reviews_count] %></span>
												<% end %>
											</div>
										</div>
									</div>
								</div>
								<% end %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
